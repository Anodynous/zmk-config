// Custom layers
#define DEFAULT 0
#define STENO 1

// Steno macros
#define stn_mc(NODELABEL, NODE, LABEL, KEY1, KEY2) \
    NODELABEL: NODE { \
        compatible = "zmk,behavior-macro"; \
        label = LABEL; \
        #binding-cells = <0>; \
        bindings = <&kp KEY1>, <&kp KEY2>; \
        mode = "hold";\
    }


/ {
    behaviors {
		//macro_1: macro_1 {
		//	compatible = "zmk,behavior-macro";
		//	label = "MACRO_1";
		//	#binding-cells = <0>;
		//	bindings = <&kp R>, <&kp F>;
        //    mode = "hold";
		//};

        // Steno macro definitions, Left
        stn_mc(sm_hr, sm_hr, "SM_HR", R, F);
        stn_mc(sm_pw, sm_pw, "SM_PW", E, D);
        stn_mc(sm_tk, sm_tk, "SM_TK", W, S);
        stn_mc(sm_ao, sm_ao, "SM_AO", C, V);
        // Steno macro definitions, Right
        stn_mc(sm_eu, sm_eu, "SM_EU", N, M);
        stn_mc(sm_fr, sm_fr, "SM_FR", U, J);
        stn_mc(sm_pb, sm_pb, "SM_PB", I, K);
        stn_mc(sm_lg, sm_lg, "SM_LG", O, L);
	};


    keymap {
        compatible = "zmk,keymap";

        default_layer {
